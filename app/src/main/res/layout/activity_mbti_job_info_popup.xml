<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity = "center"
    tools:context=".mbti_job_info_popup">


    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/testpopTitleText"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/popuptextview"
            android:fontFamily="@font/jua"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/jobMBTIImage"
            android:layout_width="334dp"
            android:layout_height="140dp"
            android:src="@drawable/enfj_job" />

        <TextView
            android:id="@+id/testIText"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/popuptextview"
            android:gravity="center"
            android:padding="20dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/jobLinkBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#719382"
            android:textColor="#FFFFFF"
            android:text="관련학과페이지 이동" />

        <Button
            android:id="@+id/testPopupCloseBtn"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#CC7161"
            android:text="닫기"
            android:textColor="#FFFFFF"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>