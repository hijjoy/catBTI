<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context=".ExplainMbti">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="303dp"
        android:layout_height="226dp"
        android:alpha="0.7"
        android:background="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126"
        app:srcCompat="@drawable/mbtiimage" />

    <TextView
        android:id="@+id/mbtiText"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:fontFamily="@font/fontstyle"
        android:gravity="center_horizontal"
        android:text="MBTI"
        android:textColor="#EDE38D"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.261" />

    <TextView
        android:id="@+id/ranText"
        android:layout_width="53dp"
        android:layout_height="48dp"

        android:gravity="bottom"
        android:text="란?"
        android:textColor="#FFFFFF"

        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mbtiText"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.282" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="215dp"
        android:layout_height="250dp"
        android:gravity="clip_horizontal"
        android:text="카를 융의 성격 유형 이론을 근거로
        캐서린 쿡 브릭스와 이사벨 브릭스와 이사벨 마이어스가 제작한 심리 검사이다.\n\n\n
        MBTI검사는 내향성 또는 외향성,\n 감각 또는 직관, 사고 또는 느낌, 판단 또는 지각 네 가지 범주를 지정하고 있다."
        android:textColor="#6E6A6A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.366" />


</androidx.constraintlayout.widget.ConstraintLayout>